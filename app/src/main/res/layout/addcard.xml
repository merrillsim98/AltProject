<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtCardExpirydate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCardNumber"
        android:layout_alignLeft="@+id/txtCardNumber"
        android:layout_alignTop="@+id/txtCardNumber"
        android:layout_alignEnd="@+id/txtCardNumber"
        android:layout_alignRight="@+id/txtCardNumber"
        android:layout_alignBottom="@+id/txtCardNumber"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-114dp"
        android:ems="10"
        android:hint="Expiry Date"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview8"
        android:layout_alignLeft="@+id/textview8"
        android:layout_alignTop="@+id/textview8"
        android:layout_alignEnd="@+id/textview8"
        android:layout_alignRight="@+id/textview8"
        android:layout_alignBottom="@+id/textview8"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-115dp"
        android:text="Expiry Date:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="153dp"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:text="Add Card"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnAddCard"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginBottom="251dp"
        android:onClick="OnAddCard"
        android:text="Add Card" />

    <TextView
        android:id="@+id/textview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_toStartOf="@+id/txtCardName"
        android:layout_toLeftOf="@+id/txtCardName"
        android:text="Name on Card" />

    <EditText
        android:id="@+id/txtCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:ems="10"
        android:hint="Card Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textview8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview7"
        android:layout_alignLeft="@+id/textview7"
        android:layout_alignTop="@+id/textview7"
        android:layout_alignEnd="@+id/textview7"
        android:layout_alignRight="@+id/textview7"
        android:layout_alignBottom="@+id/textview7"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-59dp"
        android:text="Card Number:" />

    <EditText
        android:id="@+id/txtCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCardName"
        android:layout_alignLeft="@+id/txtCardName"
        android:layout_alignTop="@+id/txtCardName"
        android:layout_alignEnd="@+id/txtCardName"
        android:layout_alignRight="@+id/txtCardName"
        android:layout_alignBottom="@+id/txtCardName"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-58dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtCardCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCardNumber"
        android:layout_alignLeft="@+id/txtCardNumber"
        android:layout_alignTop="@+id/txtCardNumber"
        android:layout_alignEnd="@+id/txtCardNumber"
        android:layout_alignRight="@+id/txtCardNumber"
        android:layout_alignBottom="@+id/txtCardNumber"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-58dp"
        android:ems="10"
        android:hint="Card CVV"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview8"
        android:layout_alignLeft="@+id/textview8"
        android:layout_alignTop="@+id/textview8"
        android:layout_alignEnd="@+id/textview8"
        android:layout_alignRight="@+id/textview8"
        android:layout_alignBottom="@+id/textview8"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-59dp"
        android:text="CVV:" />

    <Button
        android:id="@+id/back_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Back"/>

</RelativeLayout>